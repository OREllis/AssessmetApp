<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="uk.ac.cityofglasgowcollege.assessment_3.MainActivity">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Welcome ($USER)"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/menu_sv"
        android:layout_width="358dp"
        android:layout_height="515dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/places_btn"
                android:layout_width="349dp"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:onClick="places_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/buchanan_image"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/placesToGo_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Places to go"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="18dp" />

            <ImageButton
                android:id="@+id/venus_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:onClick="venues_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/venues"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Venues"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />

            <ImageButton
                android:id="@+id/artAndMuseums_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:onClick="artAndMuseums_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/kelvingrove_art_gallery_and_museum"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Art Galleries and Museums"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />

            <ImageButton
                android:id="@+id/transportation_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:onClick="transport_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/subway_map"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Transportation"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="432dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/background_light"
        android:onClick="logout_btn_Click"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
