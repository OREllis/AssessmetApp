<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="uk.ac.cityofglasgowcollege.assessment_3.TransportationActivity">

    <Button
        android:id="@+id/transportBack_btn"
        android:layout_width="432dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/background_light"
        android:onClick="transportBack_btn_Click"
        android:text="Back to Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Transportation in Glasgow"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="346dp"
        android:layout_height="483dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/scotrailSite_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:onClick="subwaySite_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/subway_map"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Subway Timetable and Website"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />

            <ImageButton
                android:id="@+id/firstBusSite_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:onClick="busSite_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bus_map"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="First Bus Timetable"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />

            <ImageButton
                android:id="@+id/taxisSite_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:onClick="taxisSite_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/glasgow_taxis"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Glasgow Taxis Website"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />

            <ImageButton
                android:id="@+id/bikesSite_btn"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@android:color/transparent"
                android:onClick="bikesSite_btn_Click"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/glasgow_bikes"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Hireable Bicycles"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="18dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
